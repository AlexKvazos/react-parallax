{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "lib": ["dom", "es2015", "es2016"],
        "target": "es6",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true
    },
    "include": ["src", "@types"],
    "exclude": ["node_modules"]
}
