{
    "name": "react-parallax",
    "author": "Richard Rutsche",
    "version": "3.0.0",
    "description": "A React Component for parallax effect working in client-side and server-side rendering environment",
    "repository": {
        "type": "git",
        "url": "https://github.com/RRutsche/react-parallax.git"
    },
    "main": "dist/index.js",
    "types": "@types/index.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "npm run test -- --watch",
        "test:cover": "npm run test -- --coverage",
        "dev": "parcel src/kitchensink/index.html --port 3000 --out-dir .dev",
        "build": "parcel build src/index.tsx --target=node --no-source-maps",
        "lint": "tsc --noEmit && eslint src",
        "format": "prettier --write \"*/**/*.{ts,tsx,js,json}\" \"*.js\"",
        "check-types": "tsc"
    },
    "keywords": [
        "react",
        "reactjs",
        "parallax",
        "scroll",
        "jsx"
    ],
    "peerDependencies": {
        "react": "16.x.x",
        "react-dom": "16.x.x"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@types/node": "^12.7.8",
        "@types/react": "^16.9.2",
        "@types/react-dom": "^16.9.0",
        "@types/react-router-dom": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^2.2.0",
        "@typescript-eslint/parser": "^2.2.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "eslint": "^5.14.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-airbnb-typescript": "^4.0.1",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-destructuring": "^2.1.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jest": "^22.3.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.1.0",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "jscs": "^3.0.7",
        "jsdom": "^13.2.0",
        "lint-staged": "^8.1.4",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.7.4",
        "react": "^16.0.0",
        "react-addons-test-utils": "^15.6.2",
        "react-dom": "^16.0.0",
        "react-router-dom": "^4.3.1",
        "typescript": "^3.6.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-merge": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "eslint",
            "git add"
        ],
        "*.{json,css,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/setupFile.js"
        ]
    }
}
